{
  "expo": {
    "name": "Sidequest",
    "slug": "sidequest",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sidequest.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Sidequest needs access to your photos to add images to posts.",
        "NSCameraUsageDescription": "Sidequest needs camera access to take photos for posts."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.sidequest.app",
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.CAMERA"
      ]
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Sidequest to access your photos for posts.",
          "cameraPermission": "Allow Sidequest to use your camera for posts."
        }
      ],
      "expo-asset"
    ]
  }
}
